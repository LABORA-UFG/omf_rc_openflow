#!/usr/bin/env ruby

libs = []
# if you need to add libraries add them bellow. Examples:
# libs << "../lib/master/omf/omf_common/lib/"
# libs << "../lib/master/omf/omf_rc/lib/"

spec = Gem::Specification.find_by_name("nitos_testbed_rc")
gem_root = spec.gem_dir

threads = []
["flowvisor_proxy", "ovs_proxy"].each do |sc|
  threads << Thread.new do
    if libs.empty?
      puts "EXEC: #{sc}"
      system(sc)
    else
      cmd = "ruby "
      libs.each {|l| cmd += "-I #{l} "}
      cmd += "#{gem_root}/bin/#{sc}"
      puts "EXEC: #{cmd}"
      system(cmd)
    end
  end
  sleep 1
end

threads.each {|t| t.join}
sleep 1
